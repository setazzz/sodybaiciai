{% extends 'account/my_account.html.twig' %}
{%  block body %}
    {{  parent() }}
    {% if is_granted('ROLE_USER') == true %}

        <div class="panel panel-default col-md-9">
        <div class="panel-heading">
            <h1>Mano paskyra</h1>
        </div>
        <div class="panel-body">
            <h2>UÅ¾klausos</h2>
            {% for req in requests %}
                {% if req.confirmed %}
                    <span class="alert-success">Patvirtinta</span>
                {% else %}
                    <span class="alert-danger">Laukiama patvirtinimo</span>
                {% endif %}
                    {{ req.item }}
                {{ req.start|date("Y-m-d") }}
                {{ req.end|date("Y-m-d") }}
                <a href="/thread/{{ req.thread }}" class="btn btn-default">Pokalbis
                    {% if threads %}
                        {% for thread in threads %}
                            {% if not fos_message_is_read(thread) %}
                                ({% trans from 'FOSMessageBundle' %}new{% endtrans %})
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </a>
                <br>
            {% endfor %}
        </div>
    </div>
    {% endif %}
{% endblock body %}